@* Views/Shared/_AppLayout.cshtml *@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PPCMD</title>

    <!-- Bootstrap 5 CSS -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- DataTables -->
    <link href="https://cdn.datatables.net/v/dt/dt-2.3.4/datatables.min.css" rel="stylesheet" integrity="sha384-pmGS6IIcXhAVIhcnh9X/mxffzZNHbuxboycGuQQoP3pAbb0SwlSUUHn2v22bOenI" crossorigin="anonymous">

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Huninn&display=swap" rel="stylesheet">

    <style>
    body {
    font-family: "Huninn", sans-serif;
            background-color: ##f4eee4; /* Light clean background */
    }

    /* Sidebar base */
    .sidebar {
    width: 280px;
    background: #352b1c; /* Navy Blue */
    border-right: 1px solid #1b263b;
    color: #f4eee4;
    flex-shrink: 0;
    }

    /* Sidebar links */
    .sidebar .nav-link {
    padding: 0.6rem 1rem;
    border-radius: 0.375rem;
    color: #e0e0e0; /* light gray text */
    font-weight: 500;
    transition: all 0.2s;
    }

    .sidebar .nav-link:hover {
        background: #1b263b;
        color: #00b4d8; /* Bright cyan accent */
    }

    /* Sub-menu links */
    .sidebar .nav-link.text-white-50 {
        color: #adb5bd !important;
    }

    /* Active link highlight */
    .sidebar .nav-link.active {
        background: #1b263b;
        color: #00b4d8;
        font-weight: 600;
    }

    /* Topbar */
    header {
    background-color: #4682B4; /* Maritime Blue */
    color: #ffffff;
    }

    header .btn,
    header .dropdown-item {
    color: #fff;
    }

    header .dropdown-item:hover {
        background: #0096c7;
        color: #fff;
    }
    </style>
</head>

<body class="d-flex min-vh-100">

    <!-- Sidebar -->
    <aside class="d-none d-md-flex flex-column sidebar vh-100">
        <!-- Logo -->
        <div class="d-flex justify-content-center pt-2"
             style="height:120px;">
            <img src="~/images/company/logo.png" alt="Company Logo"
                 class="" style="height:56px; width:213px;">
            @* <span class="fw-bold ms-2">@ViewBag.CompanyName</span> *@
        </div>

        <!-- Navigation -->
        <nav class="nav flex-column px-2 py-4" >
            <a asp-controller="Dashboard" asp-action="Index" class="nav-link active">
                <i class="bi bi-speedometer2 me-2"></i> Dashboard
            </a>

            <div class="nav-item">
                <a class="nav-link d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse" href="#setupsMenu" role="button" aria-expanded="false">
                    <span><i class="bi bi-gear me-2"></i> Setups</span>
                    <i class="bi bi-chevron-down small"></i>
                </a>
                <div class="collapse ms-3" id="setupsMenu">
                    <a asp-action="Index" asp-controller="User" class="nav-link text-white-50">Users</a>
                    <a asp-action="CompanyProfile" asp-controller="Dashboard" class="nav-link text-white-50">Company Profile</a>
                    <a asp-action="DutyTypes" asp-controller="Item" class="nav-link text-white-50">Duty & Charges</a>
                    <a asp-action="Index" asp-controller="Item" class="nav-link text-white-50">Items</a>
                    <a asp-action="Index" asp-controller="Maritime" class="nav-link text-white-50">Maritime</a>
                </div>
            </div>

            <div class="nav-item">
                <a class="nav-link d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse" href="#clientsMenu" aria-expanded="false">
                    <span><i class="bi bi-people me-2"></i> Clients</span>
                    <i class="bi bi-chevron-down small"></i>
                </a>
                <div class="collapse ms-3" id="clientsMenu">
                    <a asp-action="Index" asp-controller="Client" class="nav-link text-white-50">Clients</a>
                    <a href="#" class="nav-link text-white-50">Test Link 2</a>
                </div>
            </div>

            <div class="nav-item">
                <a class="nav-link d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse" href="#generalMenu" aria-expanded="false">
                    <span><i class="bi bi-people me-2"></i>General Consignment</span>
                    <i class="bi bi-chevron-down small"></i>
                </a>
                <div class="collapse ms-3" id="generalMenu">
                    <a asp-action="Index" asp-controller="GeneralConsignment" class="nav-link text-white-50">Consignment Listing</a>
                    <a asp-action="Create" asp-controller="GeneralConsignment" class="nav-link text-white-50">Create New Consignment</a>
                    <a href="#" class="nav-link text-white-50">Test Link 2</a>
                </div>
            </div>

            <!--Premium Feature-->
            <div class="nav-item">
                <a class="nav-link d-flex justify-content-between align-items-center"
                   data-bs-toggle="collapse" href="#bulkMenu" aria-expanded="false">
                    <span><i class="bi bi-people me-2"></i>Bulk Consignment</span>
                    <i class="bi bi-chevron-down small"></i>
                </a>
                <div class="collapse ms-3" id="bulkMenu">
                    <a asp-action="Index" asp-controller="Client" class="nav-link text-white-50">Clients</a>
                    <a href="#" class="nav-link text-white-50">Test Link 2</a>
                </div>
            </div>

        </nav>
    </aside>

    <!-- Main Content -->
    <div class="flex-grow-1 d-flex flex-column bg-white text-dark">
        <!-- Topbar -->
        <header class="d-flex justify-content-between align-items-center border-bottom px-4"
                style="height:64px; background-color: #352b1c;">
            <div class="fw-semibold">@ViewBag.CompanyName</div>

            <div class="dropdown">
                <button class="btn d-flex align-items-center p-0 border-0 bg-transparent dropdown-toggle"
                        type="button" id="profileMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="@ViewBag.userProfilePicture" alt="Profile"
                         class="rounded-circle me-2 border" style="height:40px; width:40px; object-fit:cover;">
                    <span class="fw-medium text-dark">Hi, @ViewBag.userFullName</span>
                </button>
                <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-2" aria-labelledby="profileMenuButton" style="min-width:180px;">
                    <li>
                        <a class="dropdown-item text-dark" asp-controller="User" asp-action="Profile">
                            👤 Profile
                        </a>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout" class="m-0">
                            <button type="submit" class="dropdown-item text-danger">
                                🔒 Logout
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </header>

        <!-- Page Content -->
        <main class="p-4 flex-grow-1" style="background-color: #f4eee4;">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.8/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.8/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.8/js/dataTables.bootstrap5.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
