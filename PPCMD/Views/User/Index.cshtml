@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee Management";
    var currentUserId = ViewBag.CurrentUserId as string;
}

<div class="max-w-7xl mx-auto p-6 bg-white rounded-2xl shadow">
    <!-- Header -->
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-3xl font-bold text-gray-900">Employees</h2>

        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="User" asp-action="CreateEmployee"
               class="inline-flex items-center px-5 py-2.5 rounded-xl bg-indigo-600 text-white shadow hover:bg-indigo-700 transition">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" stroke-width="2"
                     viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round"
                          d="M12 4v16m8-8H4"></path>
                </svg>
                Add Employee
            </a>
        }
    </div>

    <div class="overflow-x-auto">
        <table id="employeesTable" class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-3 text-center text-sm font-semibold text-gray-700 !text-center">Name</th>
                    <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Designation</th>
                    <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Email</th>
                    <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">Mobile</th>
                    <th class="px-4 py-3 text-left text-sm font-semibold text-gray-700">System Access</th>
                    <th class="px-4 py-3 text-center text-sm font-semibold text-gray-700">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var employee in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-3 text-gray-900 font-medium text-left">@employee.FullName</td>
                        <td class="px-4 py-3 text-gray-700 text-left">@employee.Designation</td>
                        <td class="px-4 py-3 text-gray-700 text-left">@employee.Email</td>
                        <td class="px-4 py-3 text-gray-700 text-left">@employee.Mobile</td>
                        <td class="px-4 py-3 text-center">
                            <span class="px-3 py-1 text-xs font-medium rounded-full @(employee.ApplicationUser != null ? "bg-green-100 text-green-700" : "bg-red-100 text-red-700")">
                                @(employee.ApplicationUser != null ? "Yes" : "No")
                            </span>
                        </td>
                        <td class="px-4 py-3 text-center space-x-2">
                            @if (User.IsInRole("Admin"))
                            {
                                <!-- Admin full access -->
                                <a asp-controller="User" asp-action="EditEmployee" asp-route-id="@employee.Id"
                                   class="inline-flex items-center px-3 py-1.5 rounded-lg bg-indigo-100 text-indigo-700 hover:bg-indigo-200 text-sm font-medium transition">
                                    ✏️ Edit
                                </a>

                                <a asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id"
                                   class="inline-flex items-center px-3 py-1.5 rounded-lg bg-red-100 text-red-700 hover:bg-red-200 text-sm font-medium transition">
                                    🗑 Delete
                                </a>

                                @if (employee.ApplicationUser != null)
                                {
                                    <a asp-controller="Users" asp-action="Edit" asp-route-id="@employee.ApplicationUser.Id"
                                       class="inline-flex items-center px-3 py-1.5 rounded-lg bg-green-100 text-green-700 hover:bg-green-200 text-sm font-medium transition">
                                        👤 Edit User
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="User" asp-action="GrantAccess" asp-route-employeeId="@employee.Id"
                                       class="inline-flex items-center px-3 py-1.5 rounded-lg bg-emerald-100 text-emerald-700 hover:bg-emerald-200 text-sm font-medium transition">
                                        ➕ Grant Access
                                    </a>
                                }
                            }
                            else if (employee.ApplicationUser != null && employee.ApplicationUser.Id == currentUserId)
                            {
                                <!-- Non-admin user editing ONLY their own account -->
                                <a asp-controller="Users" asp-action="Edit" asp-route-id="@employee.ApplicationUser.Id"
                                   class="inline-flex items-center px-3 py-1.5 rounded-lg bg-green-100 text-green-700 hover:bg-green-200 text-sm font-medium transition">
                                    👤 Edit My Account
                                </a>
                            }
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#employeesTable').DataTable({
                responsive: true,
                pageLength: 10,
                order: [[0, 'asc']],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search employees..."
                }
            });
        });
    </script>
}
