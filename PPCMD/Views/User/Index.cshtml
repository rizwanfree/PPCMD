@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee Management";
    var currentUserId = ViewBag.CurrentUserId as string;
}

<div class="container bg-white p-4 rounded shadow">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 fw-bold text-dark">Employees</h2>

        @if (User.IsInRole("Admin"))
        {
            <a asp-controller="User" asp-action="CreateEmployee"
               class="btn btn-primary d-inline-flex align-items-center">
                <i class="bi bi-plus-lg me-2"></i> Add Employee
            </a>
        }
    </div>

    <div class="table-responsive">
        <table id="employeesTable" class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th class="text-center">Name</th>
                    <th>Designation</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th class="text-center">System Access</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td class="fw-semibold">@employee.FullName</td>
                        <td>@employee.Designation</td>
                        <td>@employee.Email</td>
                        <td>@employee.Mobile</td>
                        <td class="text-center">
                            @if (employee.ApplicationUser != null)
                            {
                                <span class="badge bg-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </td>
                        <td class="text-center">
                            <div class="dropdown">
                                <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button"
                                        id="actionsDropdown_@employee.Id" data-bs-toggle="dropdown" aria-expanded="false">
                                    Actions
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="actionsDropdown_@employee.Id">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="User" asp-action="EditEmployee" asp-route-id="@employee.Id">
                                                ✏️ Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item text-danger" asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id"
                                               onclick="return confirm('Are you sure you want to delete this employee?');">
                                                🗑 Delete
                                            </a>
                                        </li>
                                        @if (employee.ApplicationUser != null)
                                        {
                                            <li>
                                                <a class="dropdown-item" asp-controller="Users" asp-action="Edit" asp-route-id="@employee.ApplicationUser.Id">
                                                    👤 Edit User
                                                </a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                <a class="dropdown-item" asp-controller="User" asp-action="GrantAccess" asp-route-employeeId="@employee.Id">
                                                    ➕ Grant Access
                                                </a>
                                            </li>
                                        }
                                    }
                                    else if (employee.ApplicationUser != null && employee.ApplicationUser.Id == currentUserId)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-controller="Users" asp-action="Edit" asp-route-id="@employee.ApplicationUser.Id">
                                                👤 Edit My Account
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#employeesTable').DataTable({
                responsive: true,
                pageLength: 10,
                order: [[0, 'asc']],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search employees..."
                }
            });
        });
    </script>
}
