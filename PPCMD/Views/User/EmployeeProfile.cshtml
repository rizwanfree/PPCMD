@model PPCMD.Models.Employee
@{
    ViewData["Title"] = "Employee Profile";
    var isAdmin = User.IsInRole("Admin");
    var currentUserId = User.Identity?.Name;
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="row g-4">
        <!-- Left: Profile card -->
        <aside class="col-lg-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <img id="cardProfileImg"
                         src="@(Model.ProfilePictureUrl ?? "/images/user.jpg")"
                         alt="Profile"
                         class="rounded-circle border shadow-sm mb-3"
                         style="width: 110px; height: 110px; object-fit: cover;" />

                    <h5 class="fw-semibold">@($"{Model.FirstName} {Model.LastName}".Trim())</h5>
                    <p class="text-muted mb-1">@(string.IsNullOrWhiteSpace(Model.Designation) ? "—" : Model.Designation)</p>
                    <p class="text-secondary small mb-3">@(string.IsNullOrWhiteSpace(Model.Email) ? "—" : Model.Email)</p>

                    <ul class="list-unstyled small text-start">
                        <li class="d-flex justify-content-between mb-2">
                            <span class="fw-medium">Email</span>
                            <span>@(string.IsNullOrWhiteSpace(Model.Email) ? "—" : Model.Email)</span>
                        </li>
                        <li class="d-flex justify-content-between mb-2">
                            <span class="fw-medium">Mobile</span>
                            <span>@(string.IsNullOrWhiteSpace(Model.Mobile) ? "—" : Model.Mobile)</span>
                        </li>
                        <li class="d-flex justify-content-between mb-2">
                            <span class="fw-medium">CNIC</span>
                            <span>@(string.IsNullOrWhiteSpace(Model.CNIC) ? "—" : Model.CNIC)</span>
                        </li>
                        <li class="d-flex justify-content-between">
                            <span class="fw-medium">Company</span>
                            <span>@Model.Company?.CompanyName</span>
                        </li>
                    </ul>

                    <div class="d-flex gap-2 mt-3">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="User" asp-action="EditEmployee" asp-route-id="@Model.Id"
                               class="btn btn-primary w-100">Edit Employee</a>
                        }
                        else if (User.IsInRole("Admin"))
                        {
                            <a asp-controller="User" asp-action="GrantAccess" asp-route-employeeId="@Model.Id"
                               class="btn btn-success w-100">➕ Grant Access</a>
                        }
                    </div>
                </div>
            </div>
        </aside>

        <!-- Right: Profile form & password -->
        <main class="col-lg-8">
            <form asp-controller="User" asp-action="Profile" method="post" enctype="multipart/form-data" class="card shadow">
                <div class="card-body">
                    <input type="hidden" asp-for="Id" />

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label">First name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label">Last name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Designation" class="form-label">Designation</label>
                            <input asp-for="Designation" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Mobile" class="form-label">Mobile</label>
                            <input asp-for="Mobile" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="CNIC" class="form-label">CNIC</label>
                            <input asp-for="CNIC" class="form-control" />
                            <span asp-validation-for="CNIC" class="text-danger small"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Address" class="form-label">Address</label>
                            <input asp-for="Address" class="form-control" />
                        </div>
                    </div>

                    <div class="d-flex align-items-center gap-3 mt-4">
                        <img id="preview"
                             src="@(Model.ProfilePictureUrl ?? "/images/user.jpg")"
                             alt="profile"
                             class="rounded-circle border"
                             style="width: 80px; height: 80px; object-fit: cover;" />

                        <div>
                            <label class="form-label">Profile picture</label>
                            <input asp-for="ImageFile" type="file" accept="image/*" class="form-control form-control-sm mt-2" />
                            <div class="form-text">JPG / PNG / WEBP. Max 2MB.</div>
                        </div>
                    </div>

                    <!-- Password section -->
                    <div class="mt-4 border-top pt-3">
                        @if (Model.ApplicationUser != null)
                        {
                            <h5 class="fw-semibold mb-3">Password</h5>

                            @if (User.IsInRole("Admin") && Model.ApplicationUserId != (User.Identity?.Name ?? null))
                            {
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="form-label">New password</label>
                                        <input name="newPassword" type="password" class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label class="form-label">Confirm password</label>
                                        <input name="confirmPassword" type="password" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-text mt-2">As admin you can reset this employee's password.</div>
                            }
                            else
                            {
                                <div class="row g-3">
                                    <div class="col-md-4">
                                        <label class="form-label">Current password</label>
                                        <input name="currentPassword" type="password" class="form-control" />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">New password</label>
                                        <input name="newPassword" type="password" class="form-control" />
                                    </div>
                                    <div class="col-md-4">
                                        <label class="form-label">Confirm new</label>
                                        <input name="confirmPassword" type="password" class="form-control" />
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="text-muted small mb-0">This employee does not have system access.</p>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-controller="User" asp-action="GrantAccess" asp-route-employeeId="@Model.Id"
                                       class="btn btn-success">Grant Access</a>
                                }
                            </div>
                        }
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </div>
            </form>
        </main>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // image preview for both card + form preview
        (function () {
            const input = document.querySelector('input[type="file"][name="ImageFile"], input[type="file"][asp-for="ImageFile"]');
            const preview = document.getElementById('preview');
            const card = document.getElementById('cardProfileImg');
            if (!input) return;
            input.addEventListener('change', function () {
                const file = this.files && this.files[0];
                if (!file) return;
                const reader = new FileReader();
                reader.onload = function (e) {
                    if (preview) preview.src = e.target.result;
                    if (card) card.src = e.target.result;
                };
                reader.readAsDataURL(file);
            });
        })();
    </script>
}
