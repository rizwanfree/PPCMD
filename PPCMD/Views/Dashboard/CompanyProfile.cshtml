@model PPCMD.Models.Company

@{
    ViewData["Title"] = "Edit Company";
}

<div class="container my-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-body">
            <h2 class="h4 fw-semibold text-dark mb-4 text-center">
                Company Information
            </h2>

            <form asp-action="CompanyProfile" asp-controller="Dashboard" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <!-- Company Name -->
                    <div class="col-md-6">
                        <label asp-for="CompanyName" class="form-label"></label>
                        <input asp-for="CompanyName" class="form-control" readonly />
                    </div>

                    <!-- License -->
                    <div class="col-md-6">
                        <label asp-for="License" class="form-label"></label>
                        <input asp-for="License" class="form-control" readonly />
                    </div>

                    <!-- NTN -->
                    <div class="col-md-6">
                        <label asp-for="NTN" class="form-label"></label>
                        <input asp-for="NTN" class="form-control" />
                        <span asp-validation-for="NTN" class="text-danger small"></span>
                    </div>

                    <!-- STN -->
                    <div class="col-md-6">
                        <label asp-for="STN" class="form-label"></label>
                        <input asp-for="STN" class="form-control" />
                        <span asp-validation-for="STN" class="text-danger small"></span>
                    </div>

                    <!-- Proprietor Name -->
                    <div class="col-md-6">
                        <label asp-for="ProprietorName" class="form-label"></label>
                        <input asp-for="ProprietorName" class="form-control" />
                        <span asp-validation-for="ProprietorName" class="text-danger small"></span>
                    </div>

                    <!-- CNIC -->
                    <div class="col-md-6">
                        <label asp-for="CNIC" class="form-label"></label>
                        <input asp-for="CNIC" class="form-control" />
                        <span asp-validation-for="CNIC" class="text-danger small"></span>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" type="email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>

                    <!-- Website -->
                    <div class="col-md-6">
                        <label asp-for="Website" class="form-label"></label>
                        <input asp-for="Website" class="form-control" />
                    </div>

                    <!-- Landline 1 -->
                    <div class="col-md-6">
                        <label asp-for="Landline1" class="form-label"></label>
                        <input asp-for="Landline1" class="form-control" />
                    </div>

                    <!-- Landline 2 -->
                    <div class="col-md-6">
                        <label asp-for="Landline2" class="form-label"></label>
                        <input asp-for="Landline2" class="form-control" />
                    </div>

                    <!-- Mobile -->
                    <div class="col-md-6">
                        <label asp-for="Mobile" class="form-label"></label>
                        <input asp-for="Mobile" class="form-control" />
                    </div>

                    <!-- Address -->
                    <div class="col-12">
                        <label asp-for="Address" class="form-label"></label>
                        <textarea asp-for="Address" rows="3" class="form-control"></textarea>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-light border">
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary shadow-sm">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
