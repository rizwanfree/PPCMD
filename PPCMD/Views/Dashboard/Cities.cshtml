@model IEnumerable<City>
@using Newtonsoft.Json

@{
    ViewBag.Title = "Cities";
}

<div x-data="cityModal()" class="container my-4">

    <div class="card shadow-sm">
        <!-- Header -->
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="h5 mb-0 text-dark">Cities</h2>
            <button @@click="openForCreate()"
                    class="btn btn-sm btn-primary d-flex align-items-center shadow-sm">
                <i class="bi bi-plus-lg me-1"></i> Add City
            </button>
        </div>

        <div class="card-body">
            <!-- Table -->
            <div class="table-responsive">
                <table id="citiesTable" class="table table-striped table-bordered align-middle">
                    <thead class="table-light">
                        <tr class="text-center">
                            <th style="width:5%;">#</th>
                            <th style="width:75%;">City Name</th>
                            <th style="width:20%;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            int index = 1;
                            foreach (var city in Model)
                            {
                                <tr>
                                    <td class="text-center">@index</td>
                                    <td class="fw-semibold text-center">@city.Name</td>
                                    <td class="text-center">
                                        <div class="d-flex justify-content-center gap-2">
                                            <button type="button"
                                                    onclick="openForEdit(@city.Id, @Html.Raw(JsonConvert.SerializeObject(city.Name)))"
                                                    class="btn btn-sm btn-warning text-white">
                                                Edit
                                            </button>
                                            <a asp-action="Delete" asp-route-id="@city.Id"
                                               class="btn btn-sm btn-danger"
                                               onclick="return confirm('Are you sure you want to delete this city?');">
                                                Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <!-- Modal -->
    <div x-show="openModal"
         class="modal fade show d-block bg-dark bg-opacity-50"
         tabindex="-1" role="dialog"
         style="display: none;"
         x-transition>
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow">
                <div class="modal-header">
                    <h5 class="modal-title" x-text="modalTitle"></h5>
                    <button type="button" class="btn-close" @@click="closeModal()"></button>
                </div>
                <div class="modal-body">
                    <form :action="formAction" method="post">
                        <input type="hidden" name="Id" :value="cityId" />

                        <div class="mb-3">
                            <label for="Name" class="form-label">City Name</label>
                            <input type="text" name="Name" id="Name"
                                   x-model="cityName"
                                   class="form-control"
                                   required />
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <button type="button" class="btn btn-secondary" @@click="closeModal()">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script>
        function cityModal() {
            return {
                openModal: false,
                modalTitle: "Add City",
                formAction: "",
                cityName: "",
                cityId: 0,

                openForCreate() {
                    this.modalTitle = "Add City";
                    this.formAction = '@Url.Action("Create", "Dashboard")';
                    this.cityName = "";
                    this.cityId = 0;
                    this.openModal = true;
                },

                openForEdit(id, name) {
                    this.modalTitle = "Edit City";
                    this.formAction = '@Url.Action("EditCity", "Dashboard")';
                    this.cityId = id;
                    this.cityName = name;
                    this.openModal = true;
                },

                closeModal() {
                    this.openModal = false;
                }
            }
        }

        $(document).ready(function () {
            $('#citiesTable').DataTable({
                paging: true,
                searching: true,
                ordering: true,
                responsive: true,
                language: {
                    search: "Search Cities:",
                    lengthMenu: "Show _MENU_ entries",
                    info: "Showing _START_ to _END_ of _TOTAL_ cities"
                },
                columnDefs: [
                    { width: "5%", targets: 0 },
                    { width: "75%", targets: 1 },
                    { width: "20%", targets: 2 }
                ]
            });
        });
    </script>
}
