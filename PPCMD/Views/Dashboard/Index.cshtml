@{
    ViewData["Title"] = "Dashboard";
}

<div class="space-y-6">
    <h1 class="text-3xl font-bold text-gray-800">Welcome to Dashboard</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white shadow rounded-2xl p-6">
            <h2 class="text-xl font-semibold text-gray-700">Companies</h2>
            <p class="text-gray-500 text-sm">Manage registered companies here.</p>
            <a asp-controller="Company" asp-action="Index"
               class="inline-block mt-4 bg-blue-600 text-white px-4 py-2 rounded-xl hover:bg-blue-700">
                View Companies
            </a>
        </div>

        <div class="bg-white shadow rounded-2xl p-6">
            <h2 class="text-xl font-semibold text-gray-700">Jobs</h2>
            <p class="text-gray-500 text-sm">Track job orders and assignments.</p>
            <a asp-controller="Jobs" asp-action="Index"
               class="inline-block mt-4 bg-green-600 text-white px-4 py-2 rounded-xl hover:bg-green-700">
                View Jobs
            </a>
        </div>

        <div class="bg-white shadow rounded-2xl p-6">
            <h2 class="text-xl font-semibold text-gray-700">Reports</h2>
            <p class="text-gray-500 text-sm">Generate and view key reports.</p>
            <a asp-controller="Reports" asp-action="Index"
               class="inline-block mt-4 bg-purple-600 text-white px-4 py-2 rounded-xl hover:bg-purple-700">
                View Reports
            </a>
        </div>
    </div>
</div>
