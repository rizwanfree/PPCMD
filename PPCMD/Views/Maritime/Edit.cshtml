@model PPCMD.Models.Maritime
@{
    var type = ViewBag.Type as string;
}

<form asp-action="Edit" method="post" class="space-y-4">
    @Html.AntiForgeryToken()
    <input type="hidden" name="type" value="@type" />
    <input type="hidden" asp-for="Id" />

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="form-group">
            <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Name" class="text-red-600 text-sm"></span>
        </div>

        <div class="form-group">
            <label asp-for="ShortName" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="ShortName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="ShortName" class="text-red-600 text-sm"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Phone" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Phone" class="text-red-600 text-sm"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
        </div>

        <div class="form-group md:col-span-2">
            <label asp-for="NTN" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="NTN" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="NTN" class="text-red-600 text-sm"></span>
        </div>
    </div>

    <div class="flex justify-end space-x-3 pt-4 border-t">
        <button type="button" onclick="closeModal()" class="px-4 py-2 text-gray-600 border border-gray-300 rounded-md hover:bg-gray-50 transition-colors">Cancel</button>
        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors">Update</button>
    </div>
</form>