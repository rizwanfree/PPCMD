@model PPCMD.Models.Maritime
@{
    var type = ViewBag.Type as string ?? "Terminal";
}

@if (type == "Terminal")
{
    @Html.Partial("MaritimeForm.Terminal", new PPCMD.Models.Terminal())
}
else if (type == "Lolo")
{
    @Html.Partial("MaritimeForm.Lolo", new PPCMD.Models.Lolo())
}
else if (type == "ShippingLine")
{
    @Html.Partial("MaritimeForm.ShippingLine", new PPCMD.Models.ShippingLine())
}
