@model PPCMD.Models.ShippingLine

<div class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
    <div class="w-100" style="max-width: 600px;">
        <div class="card shadow-lg rounded-3 p-4">
            <div class="card-body">
                <h2 class="text-center mb-4 fw-bold text-dark">Edit Shipping Line</h2>

                <form asp-action="EditShippingLine" method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ShortName" class="form-label fw-semibold"></label>
                        <input asp-for="ShortName" class="form-control" />
                        <span asp-validation-for="ShortName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label fw-semibold"></label>
                        <input asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-semibold"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NTN" class="form-label fw-semibold"></label>
                        <input asp-for="NTN" class="form-control" />
                        <span asp-validation-for="NTN" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button type="submit" class="btn btn-success px-4">
                            Save
                        </button>
                        <a asp-action="Index" class="btn btn-secondary px-4">
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
