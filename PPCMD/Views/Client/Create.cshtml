@model PPCMD.Models.Client

@{
    ViewData["Title"] = "Create Client";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">➕ Create New Client</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row g-3">
                    <!-- Client Name -->
                    <div class="col-md-6">
                        <label asp-for="ClientName" class="form-label"></label>
                        <input asp-for="ClientName" class="form-control" />
                        <span asp-validation-for="ClientName" class="text-danger"></span>
                    </div>

                    <!-- Contact Person -->
                    <div class="col-md-6">
                        <label asp-for="ContactPerson" class="form-label"></label>
                        <input asp-for="ContactPerson" class="form-control" />
                        <span asp-validation-for="ContactPerson" class="text-danger"></span>
                    </div>

                    <!-- Mobile -->
                    <div class="col-md-6">
                        <label asp-for="Mobile" class="form-label"></label>
                        <input asp-for="Mobile" class="form-control" />
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>

                    <!-- Emails (dynamic) -->
                    <div class="col-md-12">
                        <label class="form-label">Emails</label>
                        <div id="emailContainer" class="mb-2">
                            <div class="input-group mb-2">
                                <input name="Emails" type="email" class="form-control" placeholder="Enter email" />
                                <button type="button" class="btn btn-success" onclick="addEmailField()">➕</button>
                            </div>
                        </div>
                    </div>

                    <!-- Address -->
                    <div class="col-md-12">
                        <label asp-for="Address" class="form-label"></label>
                        <textarea asp-for="Address" rows="3" class="form-control"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <!-- Client Type -->
                    <div class="col-md-6">
                        <label asp-for="ClientTypeId" class="form-label">Client Type</label>
                        <select asp-for="ClientTypeId" asp-items="ViewBag.ClientTypes" class="form-select">
                            <option value="">-- Select Type --</option>
                        </select>
                        <span asp-validation-for="ClientTypeId" class="text-danger"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary">⬅ Cancel</a>
                    <button type="submit" class="btn btn-primary">💾 Save Client</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function addEmailField() {
            const container = document.getElementById("emailContainer");

            const div = document.createElement("div");
            div.classList.add("input-group", "mb-2");

            div.innerHTML = `
                <input name="Emails" type="email" class="form-control" placeholder="Enter email" />
                <button type="button" class="btn btn-danger" onclick="this.parentElement.remove()">❌</button>
            `;

            container.appendChild(div);
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
