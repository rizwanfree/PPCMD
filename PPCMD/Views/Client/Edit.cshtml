@model PPCMD.Models.Client

@{
    ViewData["Title"] = "Edit Client";
    var emailList = Model.Emails.ToList();
}

<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-body">
            <h1 class="h4 mb-4 text-success">✏️ Edit Client</h1>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="row g-3">
                    <!-- Client Name -->
                    <div class="col-md-6">
                        <label asp-for="ClientName" class="form-label">Client Name</label>
                        <input asp-for="ClientName" class="form-control" />
                        <span asp-validation-for="ClientName" class="text-danger small"></span>
                    </div>

                    <!-- Contact Person -->
                    <div class="col-md-6">
                        <label asp-for="ContactPerson" class="form-label">Contact Person</label>
                        <input asp-for="ContactPerson" class="form-control" />
                        <span asp-validation-for="ContactPerson" class="text-danger small"></span>
                    </div>

                    <!-- Mobile -->
                    <div class="col-md-6">
                        <label asp-for="Mobile" class="form-label">Mobile</label>
                        <input asp-for="Mobile" class="form-control" />
                        <span asp-validation-for="Mobile" class="text-danger small"></span>
                    </div>

                    <!-- Emails -->
                    <div class="col-12">
                        <label class="form-label">Emails</label>
                        <div id="emailContainer" class="d-flex flex-column gap-2">
                            @for (int i = 0; i < emailList.Count; i++)
                            {
                                <div class="input-group">
                                    <input type="hidden" name="Emails[@i].Id" value="@emailList[i].Id" />
                                    <input name="Emails[@i].Email" value="@emailList[i].Email" type="email" class="form-control" />
                                    <button type="button" class="btn btn-danger" onclick="this.parentElement.remove()">❌</button>
                                </div>
                            }
                        </div>
                        <button type="button" class="btn btn-success btn-sm mt-2" onclick="addEmailField()">➕ Add Email</button>
                    </div>

                    <!-- Address -->
                    <div class="col-12">
                        <label asp-for="Address" class="form-label">Address</label>
                        <textarea asp-for="Address" rows="3" class="form-control"></textarea>
                        <span asp-validation-for="Address" class="text-danger small"></span>
                    </div>

                    <!-- Client Type -->
                    <div class="col-md-6">
                        <label asp-for="ClientTypeId" class="form-label">Client Type</label>
                        <select asp-for="ClientTypeId" asp-items="ViewBag.ClientTypes" class="form-select">
                            <option value="">-- Select Type --</option>
                        </select>
                        <span asp-validation-for="ClientTypeId" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-secondary">⬅ Cancel</a>
                    <button type="submit" class="btn btn-success">💾 Update Client</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let emailIndex = @Model.Emails.Count;

        function addEmailField() {
            const container = document.getElementById("emailContainer");

            const div = document.createElement("div");
            div.classList.add("input-group", "mb-2");

            div.innerHTML = `
                <input type="hidden" name="Emails[${emailIndex}].Id" value="0" />
                <input name="Emails[${emailIndex}].Email" type="email" placeholder="Enter email" class="form-control" />
                <button type="button" class="btn btn-danger" onclick="this.parentElement.remove()">❌</button>
            `;

            container.appendChild(div);
            emailIndex++;
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
