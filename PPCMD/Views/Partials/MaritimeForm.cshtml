@model PPCMD.Models.Maritime
@{
    Layout = null; // important for modal partials
}

<form asp-action="Create" method="post">
    <input type="hidden" name="type" value="@ViewBag.Type" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="ShortName" class="form-label">Short Name</label>
        <input asp-for="ShortName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Phone</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="NTN" class="form-label">NTN</label>
        <input asp-for="NTN" class="form-control" />
    </div>

    <div class="d-flex justify-content-end gap-2 mt-4">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" id="closeModalBtn" class="btn btn-secondary">Cancel</button>
    </div>
</form>

<script>
    $('#closeModalBtn').click(function () {
        $('#maritimeModal').modal('hide'); // Bootstrap’s modal hide
        $('#modalContent').html('');
    });
</script>
