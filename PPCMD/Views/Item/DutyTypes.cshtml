@model IEnumerable<PPCMD.Models.DutyType>

<div class="d-flex align-items-center justify-content-between mb-4">
    <h2 class="h4 fw-bold">Duty Types</h2>
    <button type="button" onclick="openCreateModal()"
            class="btn btn-primary shadow-sm">
        ➕ Add Duty Type
    </button>
</div>

<div class="table-responsive">
    <table id="dutyTypesTable" class="table table-bordered table-striped align-middle shadow-sm">
        <thead class="table-light">
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col" class="text-center" style="width: 200px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var duty in Model)
            {
                <tr>
                    <td>@duty.Name</td>
                    <td>@duty.Description</td>
                    <td class="text-center">
                        <button type="button" onclick="openEditModal(@duty.Id, '@duty.Name', '@duty.Description')"
                                class="btn btn-sm btn-warning text-white">
                            ✏ Edit
                        </button>
                        <button type="button" onclick="confirmDelete(@duty.Id)"
                                class="btn btn-sm btn-danger">
                            🗑 Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div id="dutyTypeModal" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id="modalTitle" class="modal-title">Add Duty Type</h5>
                <button type="button" class="btn-close" aria-label="Close" onclick="closeModal()"></button>
            </div>
            <div class="modal-body">
                <form id="dutyTypeForm" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="dutyId" name="Id" />

                    <div class="mb-3">
                        <label for="dutyName" class="form-label">Name</label>
                        <input type="text" id="dutyName" name="Name" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label for="dutyDescription" class="form-label">Description</label>
                        <textarea id="dutyDescription" name="Description" class="form-control"></textarea>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                        <button type="submit" id="saveDutyBtn" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirm Modal -->
<div id="deleteModal" class="modal fade" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" aria-label="Close" onclick="closeDeleteModal()"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this duty type? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeDeleteModal()">Cancel</button>
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#dutyTypesTable').DataTable();
        });

        let deleteId = null;

        function confirmDelete(id) {
            deleteId = id;
            const form = document.getElementById("deleteForm");
            form.action = "/Item/DeleteDutyType/" + id;
            new bootstrap.Modal(document.getElementById("deleteModal")).show();
        }

        function closeDeleteModal() {
            bootstrap.Modal.getInstance(document.getElementById("deleteModal")).hide();
            deleteId = null;
        }

        function openCreateModal() {
            document.getElementById("modalTitle").innerText = "Add Duty Type";
            document.getElementById("dutyTypeForm").action = '@Url.Action("CreateDutyType", "Item")';
            document.getElementById("dutyId").disabled = true;
            document.getElementById("dutyId").value = 0;
            document.getElementById("dutyName").value = "";
            document.getElementById("dutyDescription").value = "";
            new bootstrap.Modal(document.getElementById("dutyTypeModal")).show();
        }

        function openEditModal(id, name, description) {
            document.getElementById("modalTitle").innerText = "Edit Duty Type";
            document.getElementById("dutyTypeForm").action = "/Item/EditDutyType/" + id;
            document.getElementById("dutyId").value = id;
            document.getElementById("dutyName").value = name;
            document.getElementById("dutyDescription").value = description;
            new bootstrap.Modal(document.getElementById("dutyTypeModal")).show();
        }

        function closeModal() {
            bootstrap.Modal.getInstance(document.getElementById("dutyTypeModal")).hide();
        }
    </script>
}
