@model IEnumerable<PPCMD.Models.DutyType>

<div class="flex items-center justify-between mb-6">
    <h2 class="text-2xl font-bold">Duty Types</h2>
    <button onclick="openCreateModal()"
            class="px-4 py-2 bg-indigo-600 text-white rounded-lg shadow hover:bg-indigo-700 transition">
        ➕ Add Duty Type
    </button>
</div>

<div class="overflow-x-auto">
    <table id="dutyTypesTable" class="min-w-full border border-gray-200 rounded-lg shadow-sm">
        <thead class="bg-gray-100 text-gray-700">
            <tr>
                <th class="px-4 py-2 text-left">Name</th>
                <th class="px-4 py-2 text-left">Description</th>
                <th class="px-4 py-2 text-center w-60">Actions</th>
            </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
            @foreach (var duty in Model)
            {
                <tr>
                    <td class="px-4 py-2">@duty.Name</td>
                    <td class="px-4 py-2">@duty.Description</td>
                    <td class="px-4 py-2 text-center space-x-2">
                        <button onclick="openEditModal(@duty.Id, '@duty.Name', '@duty.Description')"
                                class="px-3 py-1 text-sm rounded bg-yellow-100 text-yellow-800 hover:bg-yellow-200">
                            ✏ Edit
                        </button>
                        <button onclick="confirmDelete(@duty.Id)"
                                class="px-3 py-1 text-sm rounded bg-red-100 text-red-800 hover:bg-red-200">
                            🗑 Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div id="dutyTypeModal" class="hidden fixed inset-0 bg-opacity-1 flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-lg w-full max-w-lg p-6">
        <h3 id="modalTitle" class="text-xl font-semibold mb-4">Add Duty Type</h3>

        <form id="dutyTypeForm" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" id="dutyId" name="Id" />

            <div class="mb-4">
                <label class="block text-sm font-medium mb-1" for="dutyName">Name</label>
                <input type="text" id="dutyName" name="Name" required
                       class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-indigo-200 focus:border-indigo-500" />
            </div>

            <div class="mb-4">
                <label class="block text-sm font-medium mb-1" for="dutyDescription">Description</label>
                <textarea id="dutyDescription" name="Description"
                          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-indigo-200 focus:border-indigo-500"></textarea>
            </div>

            <div class="flex justify-end space-x-2">
                <button type="button" onclick="closeModal()"
                        class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300">
                    Cancel
                </button>
                <button type="submit" id="saveDutyBtn"
                        class="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>


<!-- Delete Confirm Modal -->
<div id="deleteModal" class="hidden fixed inset-0 bg-black bg-opacity-10 flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-lg w-full max-w-md p-6">
        <h3 class="text-xl font-semibold text-gray-900 mb-4">Confirm Delete</h3>
        <p class="text-gray-600 mb-6">Are you sure you want to delete this duty type? This action cannot be undone.</p>

        <div class="flex justify-end space-x-2">
            <button type="button" onclick="closeDeleteModal()"
                    class="px-4 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300">
                Cancel
            </button>
            <form id="deleteForm" method="post">
                @Html.AntiForgeryToken()
                <button type="submit"
                        class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
                    Delete
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Enable DataTable
        $(document).ready(function () {
            $('#dutyTypesTable').DataTable();
        });

        let deleteId = null;

        function confirmDelete(id) {
            deleteId = id;
            const form = document.getElementById("deleteForm");
            form.action = "/Item/DeleteDutyType/" + id;
            document.getElementById("deleteModal").classList.remove("hidden");
        }

        function closeDeleteModal() {
            document.getElementById("deleteModal").classList.add("hidden");
            deleteId = null;
        }

        // Open Create Modal
        function openCreateModal() {

            document.getElementById("modalTitle").innerText = "Add Duty Type";
            document.getElementById("dutyTypeForm").action = '@Url.Action("CreateDutyType", "Item")'; // ✅ Correct action
            document.getElementById("dutyId").disabled = true;
            document.getElementById("dutyId").value = 0;
            document.getElementById("dutyName").value = "";
            document.getElementById("dutyDescription").value = "";
            document.getElementById("dutyTypeModal").classList.remove("hidden");
        }

        // Open Edit Modal
        function openEditModal(id, name, description) {
            document.getElementById("modalTitle").innerText = "Edit Duty Type";
            document.getElementById("dutyTypeForm").action = "/Item/EditDutyType/" + id;
            document.getElementById("dutyId").value = id;
            document.getElementById("dutyName").value = name;
            document.getElementById("dutyDescription").value = description;
            document.getElementById("dutyTypeModal").classList.remove("hidden");
        }

        // Close modal
        function closeModal() {
            document.getElementById("dutyTypeModal").classList.add("hidden");
        }

    </script>
}
