@model PPCMD.Models.Item
@{
    ViewData["Title"] = "Edit Item";
    var dutyTypes = ViewBag.DutyTypes as List<PPCMD.Models.DutyType>;
}

<h1 class="text-2xl font-bold mb-4">Edit Item</h1>

<form asp-action="Edit" method="post" class="space-y-4 max-w-lg">
    <input type="hidden" asp-for="ItemID" />

    <div>
        <label asp-for="ItemName" class="block text-sm font-medium">Item Name</label>
        <input asp-for="ItemName" class="mt-1 w-full border rounded px-3 py-2" />
        <span asp-validation-for="ItemName" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label asp-for="HSCode" class="block text-sm font-medium">HS Code</label>
        <input asp-for="HSCode" class="mt-1 w-full border rounded px-3 py-2" />
    </div>

    <button type="submit"
            class="px-4 py-2 bg-emerald-600 text-white rounded hover:bg-emerald-700">
        💾 Save
    </button>
    <a asp-action="Index" class="ml-2 text-gray-600 hover:underline">Back</a>
</form>

<hr class="my-6" />

<h2 class="text-xl font-semibold mb-2">Item Duties</h2>

@if (Model.Duties.Any())
{
    <table class="min-w-full border border-gray-200 text-sm mb-4">
        <thead class="bg-gray-100">
            <tr>
                <th class="px-4 py-2 text-left">Duty</th>
                <th class="px-4 py-2 text-left">Rate</th>
                <th class="px-4 py-2 text-left">Type</th>
                <th class="px-4 py-2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var duty in Model.Duties)
            {
                <tr class="border-b">
                    <td class="px-4 py-2">@duty.DutyType.Name</td>
                    <td class="px-4 py-2">@duty.Rate</td>
                    <td class="px-4 py-2">
                        @(duty.IsPercentage ? "%" : "Fixed")
                    </td>
                    <td class="px-4 py-2 text-right">
                        <form asp-action="DeleteDuty" method="post" onsubmit="return confirm('Are you sure?');">
                            <input type="hidden" name="id" value="@duty.Id" />
                            <button type="submit" class="text-red-600 hover:underline">🗑️ Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-gray-500 italic">No duties assigned yet.</p>
}

<form asp-action="AddDuty" method="post" class="flex items-end gap-4 mt-4">
    <input type="hidden" name="itemId" value="@Model.ItemID" />

    <!-- Duty Type -->
    <div class="flex-1">
        <label class="block text-sm font-medium">Duty Type</label>
        <select name="dutyTypeId" class="mt-1 w-full border rounded px-3 py-2">
            @foreach (var dt in dutyTypes)
            {
                <option value="@dt.Id">@dt.Name</option>
            }
        </select>
    </div>

    <!-- Rate -->
    <div class="w-32">
        <label class="block text-sm font-medium">Rate</label>
        <input type="number" step="0.01" name="rate" class="mt-1 w-full border rounded px-3 py-2" />
    </div>

    <!-- Type -->
    <div class="w-28">
        <label class="block text-sm font-medium">Type</label>
        <select name="isPercentage" class="mt-1 w-full border rounded px-3 py-2">
            <option value="true">%</option>
            <option value="false">Fixed</option>
        </select>
    </div>

    <!-- Button -->
    <div>
        <button type="submit"
                class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">
            ➕ Add
        </button>
    </div>
</form>
